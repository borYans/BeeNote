<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkerBackgroundColor"
        android:gravity="center"
        android:padding="20dp"
        tools:context=".fragments.AddStingFragment">


        <TextView
            android:id="@+id/stingsTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Total stings so far"
            android:textColor="@color/yellowText"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/totalNumberOfStings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stingNumberTxt" />

        <TextView
            android:id="@+id/totalNumberOfStings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="70sp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stingsTxt" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Tap on the number to add sting"
            android:textColor="@color/yellowText"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/stingNumberTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stingNumberTxt"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="130sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/stingsTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/dummyText"
            android:textColor="@color/yellowText"
            app:layout_constraintBottom_toTopOf="@+id/addSting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalNumberOfStings" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addSting"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:text="Add sting"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>